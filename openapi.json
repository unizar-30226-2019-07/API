            "name": "email",
            "in": "query",
            "required": false,
            "description": "Correo electrónico del usuario.",
            "example": "johndoe@example.com",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "$size",
            "in": "query",
            "required": false,
            "description": "Tamaño de la página.",
            "example": 10,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          },
          {
            "name": "$page",
            "in": "query",
            "required": false,
            "description": "Número de página.",
            "example": 1,
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          },
          {
            "name": "$sort",
            "in": "query",
            "required": false,
            "description": "Atributo(s) por los que ordenar.",
            "example": "birth_date DESC",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
